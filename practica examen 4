def ejercicio4():
    palabra=input("Palabra: ")
    palabranueva=""
    for letra in palabra:
        if (letra=="a" or letra=="e" or letra=="i" or letra=="o" or letra=="u"):
            palabranueva=palabranueva+letra.upper()
        else:
            palabranueva=palabranueva+letra
        palabracambio=palabranueva[::-1]
    print(palabracambio)
ejercicio4()
